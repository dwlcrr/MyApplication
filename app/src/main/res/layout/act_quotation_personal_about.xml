<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.gxz.PagerSlidingTabStrip
        android:id="@+id/tabs_qPersonalAbout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rl_mallcenterTitle"
        android:textColor="@color/light_blue"
        android:textSize="16sp"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="@color/accent_material_light"
        app:pstsIndicatorHeight="5dp"
        app:pstsShouldExpand="false"
        app:pstsTextSelectedColor="@color/accent_material_light"
        app:pstsUnderlineColor="@color/colorAccent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_qPersonalAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs_qPersonalAbout" />

</RelativeLayout>
