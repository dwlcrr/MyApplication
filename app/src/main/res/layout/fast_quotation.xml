<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_line"/>

    <TextView
        android:id="@+id/tv_quotationTime"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="报盘时间：9:30-17:00(周末、节假日除外)"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_product"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center|right"
                android:text="产品"
                app:layout_widthPercent="20%"/>

            <TextView
                android:id="@+id/tv_product"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_product_title"
                android:gravity="center|left"
                android:text="产品"
                app:layout_widthPercent="60%"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:background="@color/gray_66"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_product"
                android:layout_marginRight="10dp"
                app:layout_widthPercent="75%"/>

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/arrow_right"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_companyTitle"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_company_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center|right"
                android:text="公司抬头"
                app:layout_widthPercent="20%"/>

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_company_title"
                android:gravity="center|left"
                android:text="公司抬头"
                app:layout_widthPercent="60%"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:background="@color/gray_66"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_company"
                android:layout_marginRight="10dp"
                app:layout_widthPercent="75%"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/arrow_right"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_open_level"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_openLevelTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center|right"
                android:text="公开程度"
                app:layout_widthPercent="20%"/>

            <TextView
                android:id="@+id/tv_open_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_openLevelTitle"
                android:gravity="center|left"
                android:text="公开程度"
                app:layout_widthPercent="60%"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:background="@color/gray_66"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/tv_open_level"
                android:layout_marginRight="10dp"
                app:layout_widthPercent="75%"/>
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/arrow_right"/>
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_quotationInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_quotationInfoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center|right"
                android:text="报盘信息:"
                app:layout_widthPercent="21%"/>

            <TextView
                android:id="@+id/tv_quotationInfo"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:layout_toRightOf="@+id/tv_quotationInfoTitle"
                android:background="@drawable/corner_bg"
                android:gravity="top"
                android:padding="10dp"
                android:text="adddddddddddddddddddaaaaaaaaaa"
                app:layout_widthPercent="60%"/>

        </com.zhy.android.percent.support.PercentRelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_publish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="50dp"
        android:background="@drawable/quotation_publish_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="发布"/>

</LinearLayout>